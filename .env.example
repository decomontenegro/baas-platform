# =============================================================================
# BaaS Dashboard - Environment Variables
# =============================================================================
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control!

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string
DATABASE_URL="postgresql://baas:baas_secret_2024@localhost:5432/baas_db?schema=public"

# Individual PostgreSQL settings (for docker-compose)
POSTGRES_USER="baas"
POSTGRES_PASSWORD="baas_secret_2024"
POSTGRES_DB="baas_db"
POSTGRES_HOST="localhost"
POSTGRES_PORT="5432"

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL="redis://:baas_redis_2024@localhost:6379"
REDIS_PASSWORD="baas_redis_2024"

# =============================================================================
# NEXTAUTH
# =============================================================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-key-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# EMAIL (Magic Link Authentication)
# =============================================================================
# Option 1: SMTP (Generic)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="BaaS Dashboard <noreply@yourdomain.com>"

# Option 2: Resend (Recommended for production)
RESEND_API_KEY="re_xxxxxxxxxxxxx"

# =============================================================================
# AI PROVIDERS
# =============================================================================
# OpenAI
OPENAI_API_KEY="sk-xxxxxxxxxxxxx"
OPENAI_ORG_ID=""

# Anthropic (Claude)
ANTHROPIC_API_KEY="sk-ant-xxxxxxxxxxxxx"

# Google AI (Gemini)
GOOGLE_AI_API_KEY="xxxxxxxxxxxxx"

# =============================================================================
# MESSAGING CHANNELS
# =============================================================================
# WhatsApp Business API (Meta)
WHATSAPP_ACCESS_TOKEN=""
WHATSAPP_PHONE_NUMBER_ID=""
WHATSAPP_BUSINESS_ACCOUNT_ID=""
WHATSAPP_VERIFY_TOKEN=""

# Telegram
TELEGRAM_BOT_TOKEN=""

# Discord
DISCORD_BOT_TOKEN=""
DISCORD_CLIENT_ID=""
DISCORD_CLIENT_SECRET=""

# =============================================================================
# PAYMENT PROVIDERS
# =============================================================================
# Stripe
STRIPE_SECRET_KEY="sk_test_xxxxxxxxxxxxx"
STRIPE_PUBLISHABLE_KEY="pk_test_xxxxxxxxxxxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxxxxxxxxxxx"

# Stripe Price IDs for subscription plans (create in Stripe Dashboard)
STRIPE_PRICE_STARTER="price_xxxxxxxxxxxxx"  # R$49/mês
STRIPE_PRICE_PRO="price_xxxxxxxxxxxxx"      # R$149/mês

# MercadoPago
MERCADOPAGO_ACCESS_TOKEN=""
MERCADOPAGO_PUBLIC_KEY=""

# =============================================================================
# CLAWDBOT INTEGRATION
# =============================================================================
# Webhook secret for signature verification (generate with: ./scripts/generate-webhook-secret.sh)
CLAWDBOT_WEBHOOK_SECRET=""

# Optional: Comma-separated list of allowed IPs for webhook requests
# Leave empty to skip IP validation
CLAWDBOT_ALLOWED_IPS=""

# Optional: Enable strict IP validation (rejects requests from unknown IPs)
CLAWDBOT_STRICT_IP_VALIDATION="false"

# Clawdbot Gateway connection settings
CLAWDBOT_GATEWAY_URL="ws://localhost:3033"
CLAWDBOT_GATEWAY_TOKEN=""

# =============================================================================
# INTEGRATIONS
# =============================================================================
# HubSpot CRM
HUBSPOT_API_KEY=""
HUBSPOT_CLIENT_ID=""
HUBSPOT_CLIENT_SECRET=""

# Google (Calendar, etc.)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# AWS S3 (File storage)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET=""

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Sentry (Error tracking)
SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# PostHog (Analytics)
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# =============================================================================
# APPLICATION
# =============================================================================
# Environment: development, staging, production
NODE_ENV="development"

# App URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# API URL (if different from app)
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Enable debug mode
DEBUG="false"

# =============================================================================
# LOGGING (Structured Logging with Pino)
# =============================================================================
# Log level: trace, debug, info, warn, error, fatal
LOG_LEVEL="info"

# Log format: json (production) or pretty (development)
# Auto-detected based on NODE_ENV if not set
LOG_FORMAT=""

# --- External Log Transports (Optional) ---

# Axiom (https://axiom.co)
AXIOM_TOKEN=""
AXIOM_DATASET="baas-logs"
AXIOM_ORG_ID=""

# Logtail / Better Stack (https://betterstack.com)
LOGTAIL_TOKEN=""
LOGTAIL_ENDPOINT=""

# Datadog (https://datadoghq.com)
DATADOG_API_KEY=""
DATADOG_SITE="datadoghq.com"
DATADOG_SERVICE="baas-dashboard"
DATADOG_TAGS="env:production"

# Custom HTTP endpoint (for any log aggregator)
LOG_HTTP_URL=""
LOG_HTTP_METHOD="POST"
LOG_HTTP_HEADERS="{}"
LOG_HTTP_BATCH_SIZE="100"
LOG_HTTP_FLUSH_MS="5000"

# =============================================================================
# RATE LIMITING (Upstash Redis)
# =============================================================================
# Upstash Redis for distributed rate limiting (recommended for production)
# Get your credentials at https://upstash.com
UPSTASH_REDIS_REST_URL="https://xxx.upstash.io"
UPSTASH_REDIS_REST_TOKEN="AXxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Legacy local rate limiting (fallback if Upstash not configured)
RATE_LIMIT_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="60000"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_MULTI_TENANT="true"
FEATURE_BILLING="true"
FEATURE_ANALYTICS="true"
